    <div class="control-group">
        <label class="control-label">{{ _('Upload Interval (seconds)') }}</label>
        <div class="controls">
            <input type="number" class="input-block-level" data-bind="value: settings.plugins.prusa_connect_uploader.upload_interval">
        </div>
    </div>
</form>
